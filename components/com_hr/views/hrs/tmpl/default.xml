<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="人才招聘分类列表" option="com_hr_hrs_view_default_option">
		<help
			key="人才招聘分类列表"
		/>
		<message>
			<![CDATA[COM_HR_HRS_VIEW_DEFAULT_DESC]]>
		</message>
	</layout>
	
	<!-- Add fields to the request variables for the layout. -->
	<fields name="request">
		<fieldset name="request">
			<field name="id" type="category"
				default="0"
				extension="com_hr"
				label="COM_HR_FIELD_SELECT_CATEGORY_LABEL"
				description="COM_HR_FIELD_SELECT_CATEGORY_DESC"
				required="true"
			/>
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset name="basic" label="COM_HR_HR_MENU_SETTINGS_LABEL">
			<field name="titlepreicon"
				type="text"
				size="10"
				default=""
				label="标题前缀图标"
				description="填写标题前缀图标坐标"
			/>
			<field name="titleprewidth"
				type="text"
				default=""
				label="标题前缀图标宽度"
				description="设置标题前缀图标宽度"
			/>
			<field name="titlepreheight"
				type="text"
				default=""
				label="标题前缀图标高度"
				description="设置标题前缀图标高度"
			/>
			
			<field name="quickbtbg"
				type="text"
				size="10"
				default=""
				label="快速申请按钮背景"
				description="填写快速申请按钮背景坐标"
			/>
			<field name="quickbtwidth"
				type="text"
				default=""
				label="快速申请按钮宽度"
				description="设置快速申请按钮宽度"
			/>
			<field name="quickbtheight"
				type="text"
				default=""
				label="快速申请按钮高度"
				description="设置快速申请按钮高度"
			/>
			<field name="quickbtshowtext" type="radio"
				default="1"
				label="快速申请显示文字"
				description="设置快速申请按钮是否显示文字"
				required="true">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
			</field>
			
			<field name="submitbg"
				type="text"
				size="10"
				default=""
				label="提交按钮背景"
				description="填写提交按钮背景坐标"
			/>
			<field name="submitwidth"
				type="text"
				default=""
				label="提交按钮宽度"
				description="设置提交按钮宽度"
			/>
			<field name="submitheight"
				type="text"
				default=""
				label="提交按钮高度"
				description="设置提交按钮高度"
			/>
			
			<field
				name="inputbg"
				type="text"
				size="10"
				label="输入框背景"
				description="填写输入框背景坐标"
				default=""
			/>
			<field
				name="inputwidth"
				type="text"
				label="输入框背景宽度"
				description="输入框背景宽度"
				default=""
			/>
			<field
				name="inputheight"
				type="text"
				label="输入框背景高度"
				description="输入框背景高度"
				default=""
			/>
			<field
				name="inputpadding"
				type="text"
				label="输入框内框留白"
				description="设置输入框的四项留白，依次为：上 右 下 作，不留白则填写为 0 即可，如：0 10 0 10，单位为px"
				default=""
			/>
			
			<field name="limit" type="text"
				default="9"
				label="COM_HR_FIELD_LIMIT_LABEL"
				description="COM_HR_FIELD_LIMIT_DESC"
				required="true"
			/>
			<field name="isopen" type="radio"
				default="0"
				extension="com_hr"
				label="COM_HR_FIELD_ISOPEN_LABEL"
				description="COM_HR_FIELD_ISOPEN_DESC"
				required="true">
				<option
					value="1">JYES</option>
				<option
					value="0">JNO</option>
			</field>
			<field name="parentcid" type="text"
				default="1"
				extension="com_hr"
				label="COM_HR_FIELD_PARENTID_LABEL"
				description="COM_HR_FIELD_PARENTID_DESC"
			/>
		</fieldset>
	</fields>
</metadata>
