<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.7"
	client="site"
	method="upgrade">
	<name>mod_skype</name>
	<author>Woondroo</author>
	<creationDate>Janu 2012</creationDate>
	<copyright>Power by Woondroo!</copyright>
	<license>No license!</license>
	<authorEmail>wengebin@hotmail.com</authorEmail>
	<authorUrl>www.d-niu.com</authorUrl>
	<version>1.7.0</version>
	<description>在线呼叫管理</description>
	<files>
		<filename module="mod_skype">mod_skype.php</filename>
		<folder>tmpl</folder>
		<filename>index.html</filename>
		<filename>mod_skype.xml</filename>
	</files>
	<languages>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_SKYPE" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="skypescript"
					type="text"
					label="skype JS地址"
					description="填写skype 呼叫的JS地址"
					size="40"
					filter="safehtml"
					class="inputbox"
					default=""
				/>
				<field
					name="skypelink"
					type="text"
					label="skype链接"
					description="填写需要被呼叫的skype链接地址"
					size="40"
					filter="safehtml"
					class="inputbox"
					default=""
				/>
				<field
					name="msnscript1"
					type="text"
					label="MSN JS地址1"
					description="填写MSN 呼叫的JS地址1"
					size="40"
					filter="safehtml"
					class="inputbox"
					default=""
				/>
				<field
					name="msnscript2"
					type="text"
					label="MSN JS地址2"
					description="填写MSN 呼叫的JS地址2"
					size="40"
					filter="safehtml"
					class="inputbox"
					default=""
				/>
				<field
					name="msnlink"
					type="text"
					label="msn链接"
					description="填写需要被呼叫的msn链接地址"
					size="40"
					filter="safehtml"
					class="inputbox"
					default=""
				/>
			</fieldset>
			
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
