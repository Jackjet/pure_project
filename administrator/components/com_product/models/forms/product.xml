<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_product/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
			default=""
		/>
		<field
			name="title"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_TITLE_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_TITLE_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			class="inputbox"
			size="45"
		/>
		<!--
		<field
			name="modelno"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_MODELNO_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_MODELNO_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="brandname"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_BRANDNAME_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_BRANDNAME_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="country"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_COUNTRY_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_COUNTRY_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="price"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_PRICE_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_PRICE_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="minorder"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_MINORDER_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_MINORDER_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		-->
		<field
			name="image"
			type="media"
			label="COM_PRODUCT_PRODUCT_FIELD_IMAGE_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_IMAGE_DESC"
		/>
		<!--
		<field
			name="about"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_ABOUT_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_ABOUT_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="proimgs"
			type="media"
			label="COM_PRODUCT_PRODUCT_FIELD_PROIMGS_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_PROIMGS_DESC"
		/>
		-->
		<field
			name="description"
			type="editor"
			label="COM_PRODUCT_PRODUCT_FIELD_DESCRIPTION_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_DESCRIPTION_DESC"
			filter="ProductHelper::filterText"
			buttons="true"
		/>
		<field 
			name="addtime" 
			type="calendar" 
			label="COM_PRODUCT_PRODUCT_FIELD_ADDTIME_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_ADDTIME_DESC"
			class="inputbox" size="22"
			format="%Y-%m-%d %H:%M:%S" 
			filter="user_utc" 
		/>
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"
			size="1"
		/>
		<field
			name="catid"
			type="category"
			extension="com_product"
			class="inputbox"
			default=""
			label="COM_PRODUCT_PRODUCT_FIELD_CATID_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_CATID_DESC"
			required="true"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		<field
			name="language"
			type="contentlanguage"
			label="JFIELD_LANGUAGE_LABEL"
			description="COM_PRODUCT_FIELD_LANGUAGE_DESC"
			class="inputbox">
			<option value="*">JALL</option>
		</field>
		<field
			name="published"
			type="radio"
			default="1"
			label="COM_PRODUCT_PRODUCT_FIELD_PUBLISHED_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_PUBLISHED_DESC">
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
		</field>
		<field
			name="ordering"
			type="text"
			label="COM_PRODUCT_PRODUCT_FIELD_ORDERING_LABEL"
			description="COM_PRODUCT_PRODUCT_FIELD_ORDERING_DESC"
			size="40"
			class="inputbox"
			default="0"
			required="true"
		/>
	</fieldset>
	<field
		name="metadesc"
		type="textarea"
		label="JFIELD_META_DESCRIPTION_LABEL"
		description="JFIELD_META_DESCRIPTION_DESC"
		rows="3"
		cols="40"/>

	<field
		name="metakey"
		type="textarea"
		label="JFIELD_META_KEYWORDS_LABEL"
		description="JFIELD_META_KEYWORDS_DESC"
		rows="3"
		cols="40"/>
	
	<fields name="metadata">
		<fieldset
			name="metadata"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="author"
				type="text"
				label="JAUTHOR"
				description="JFIELD_METADATA_AUTHOR_DESC"
				size="30"/>
	
			<field name="robots"
				type="list"
				label="JFIELD_METADATA_ROBOTS_LABEL"
				description="JFIELD_METADATA_ROBOTS_DESC"
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="index, follow">JGLOBAL_INDEX_FOLLOW</option>
				<option value="noindex, follow">JGLOBAL_NOINDEX_FOLLOW</option>
				<option value="index, nofollow">JGLOBAL_INDEX_NOFOLLOW</option>
				<option value="noindex, nofollow">JGLOBAL_NOINDEX_NOFOLLOW</option>
			</field>
		</fieldset>
	</fields>
	
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_PRODUCT_PRODUCT_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_PRODUCT_PRODUCT_FIELD_SHOW_CATEGORY_DESC"
				default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</form>
