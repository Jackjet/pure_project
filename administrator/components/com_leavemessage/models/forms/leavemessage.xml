<?xml version="1.0" encoding="utf-8"?>
<form
	addrulepath="/administrator/components/com_leavemessage/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
			default=""
		/>
		<field
			name="title"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_TITLE_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_TITLE_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="username"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_USERNAME_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_USERNAME_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="sex"
			type="list"
			default="no"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_SEX_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_SEX_DESC">
			<option
				value="no">未填写</option>
			<option
				value="mr">先生</option>
			<option
				value="miss">小姐</option>
			<option
				value="ms">女士</option>
			<option
				value="mrs">夫人</option>
		</field>
		<field
			name="phone"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_PHONE_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_PHONE_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="fax"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_FAX_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_FAX_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="qq"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_QQMSN_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_QQMSN_EMAIL_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="email"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_EMAIL_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_EMAIL_DESC"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="company"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_COMPANY_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_COMPANY_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<!--
		<field
			name="country"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_COUNTRY_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_COUNTRY_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		-->
		<field
			name="demand"
			type="textarea"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_DEMAND_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_DEMAND_DESC"
			rows="3" cols="30"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="clientip"
			readonly="true"
			type="text"
			label="用户IP"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			
			name="published"
			type="radio"
			default="1"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_PUBLISHED_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_PUBLISHED_DESC">
			<option
				value="1">JYES</option>
			<option
				value="0">JNO</option>
		</field>
		<field
			name="ordering"
			type="text"
			label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_ORDERING_LABEL"
			description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_ORDERING_DESC"
			size="40"
			class="inputbox"
			default="0"
			required="true"
		/>
	</fieldset>
	<fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>
			<field
				name="show_category"
				type="list"
				label="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_SHOW_CATEGORY_LABEL"
				description="COM_LEAVEMESSAGE_LEAVEMESSAGE_FIELD_SHOW_CATEGORY_DESC"
				default=""
			>
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
	</fields>
</form>
