<?xml version="1.0" encoding="UTF-8"?>
<extension version="1.7" type="file" method="upgrade">
	<name>files_joomla</name>
	<author>Woondroo</author>
	<authorEmail>wengebin@hotmail.com</authorEmail>
	<authorUrl>www.d-niu.com</authorUrl>
	<copyright>(C) Woondroo Build</copyright>
	<license>No copy</license>
	<version>1.7.1</version>
	<creationDate>2012-10-01</creationDate>
	<description>FILES_JOOMLA_XML_DESCRIPTION</description>

	<scriptfile>administrator/components/com_admin/script.php</scriptfile>

	<update> <!-- Runs on update; New in 1.7 -->
		<schemas>
			<schemapath type="mysql">administrator/components/com_admin/sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<fileset>
		<files>
			<folder>administrator</folder>
			<folder>cache</folder>
			<folder>components</folder>
			<folder>images</folder>
			<folder>includes</folder>
			<folder>language</folder>
			<folder>libraries</folder>
			<folder>logs</folder>
			<folder>media</folder>
			<folder>modules</folder>
			<folder>plugins</folder>
			<folder>templates</folder>
			<folder>tmp</folder>
			<file>htaccess.txt</file>
			<file>web.config.txt</file>
			<file>index.php</file>
		</files>
	</fileset>

	<updateservers>
		<server type="collection">http://update.joomla.org/core/list.xml</server>
		<server type="collection">http://update.joomla.org/jed/list.xml</server>
	</updateservers>
</extension>
